<%= f.association :poa, 
  collection: ::Poa.habilitados,
  label_method: :nombre, 
  value_method: :id,
  input_html: { class: 'chosen-select' }
%>

<%= f.association :actividadpf, 
  collection: ::Actividadpf.where(proyectofinanciero_id: 
                                  f.object.proyectofinanciero.map(&:id)),
  label_method: lambda { |t| t.nombrecorto + ':' + t.titulo},
  value_method: :id,
  input_html: { class: 'chosen-select' }
%>
