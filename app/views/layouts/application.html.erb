<% content_for :titulo do %>
  Actividades y Archivo de Prensa SJR LAC
<% end %>

<% content_for :menu do %>
  <%= menu_group do %>
    <% if !current_usuario.nil? %>
      <%= drop_down "Actividades" do %>
        <%= menu_item "Listado", cor1440_gen.actividades_path %>
        <%= menu_item "Informes", cor1440_gen.informes_path %>
      <% end %>
      <%= drop_down "Archivo de Prensa" do %>
        <%= menu_item "Buscar", sal7711_gen.buscar_path %>
        <%= menu_item "Añadir Artículo", sal7711_gen.new_articulo_path %>
      <% end %>
    <% end %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <%= menu_item "Documentacion", sip.acercade_path %>
    <% if !current_usuario.nil? %>
      <%= drop_down "Administrar" do %>
        <%= menu_item "Clave", sip.editar_registro_usuario_path %>
        <% if current_usuario.rol == Ability::ROLADMIN  %>
          <%= menu_item "Usuarios", sip.usuarios_path %>
        <% end %>
        <% if current_usuario.rol == Ability::ROLADMIN || current_usuario.rol == Ability::ROLDIR %>
          <%= menu_item "Tablas Básicas", sip.tablasbasicas_path %>
        <% end %>
      <% end %>
      <%= menu_item "Salir #{current_usuario.nusuario}", sip.sign_out_path %>
    <% else %>
      <%= menu_item "Acerca de", sip.acercade_path %>
      <%= menu_item "Iniciar Sesión", sip.new_usuario_session_path %> 
    <% end %>
  <% end %>
<% end %>

<% content_for :piedepagina do %>
  <p><span class='derechos'>Dominio Público de acuerdo a Legislación Colombiana<br/>
    Desarrollado para <a href="http://www.sjrlac.org">SJR LAC</a> y <a href="http://www.sjrcol.com">SJR Colombia</a> por <a href="http://www.pasosdeJesus.org" target="_blank">Pasos de Jesús</a>. 2015. 
  </span></p>
<% end %>

<%= render template: "layouts/sal7711_gen/application" %>
